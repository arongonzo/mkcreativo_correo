
@(Html.Kendo().Grid<mksolucion.Models._cnt01_cuenta>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c._tipocuenta.cnt02_nombre);
          columns.Bound(c => c.cnt01_nombre);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("cnt01_cuenta_Read", "CuentaCliente"))
      )
)
