
@(Html.Kendo().Grid<mksolucion.Models._serv01_servicios>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c._cuentaCliente.cnt01_nombre);
          columns.Bound(c => c._planes.pln01_nombre);
          columns.Bound(c => c._planes.pln01_detalle);
          columns.Bound(c => c._planes.pln01_fechacreacion);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("serv01_servicios_Read", "ServicioCliente"))
      )
      
)
