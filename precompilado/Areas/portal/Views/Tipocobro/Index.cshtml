@{
    ViewBag.Title = "Tipos de Cobro";
    Layout = Session["layout"].ToString();
}

<h2>Tipos de Cobro</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

@(Html.Kendo().Grid<mksolucion.Models._pln03_tipocobro>()
      .Name("grid")
      .Columns(columns =>
      {

          columns.Template(c => Html.ActionLink("Editar", "Edit", new { Id = c.pln03_id })).ClientTemplate(Html.ActionLink(" ", "Edit", new { Id = "pln03_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_edit.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("pln03_id", "#=pln03_id#")).Width(24);
          columns.Template(c => Html.ActionLink("Eliminar", "Delete", new { Id = c.pln03_id })).ClientTemplate(Html.ActionLink(" ", "Delete", new { Id = "pln03_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_delete.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("pln03_id", "#=pln03_id#")).Width(24);
          columns.Template(c => Html.ActionLink("Detalle", "Details", new { Id = c.pln03_id })).ClientTemplate(Html.ActionLink(" ", "Details", new { Id = "pln03_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_detail.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("pln03_id", "#=pln03_id#")).Width(24);

          
        columns.Bound(c => c.pln03_nombre);
        columns.Bound(c => c.pln03_descripcion);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("pln03_tipocobro_Read", "Tipocobro"))
      )
)
