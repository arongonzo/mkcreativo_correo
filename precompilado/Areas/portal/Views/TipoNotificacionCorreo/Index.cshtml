@{
    ViewBag.Title = "Tipos de Notificación de correos";
    Layout = Session["layout"].ToString();
}

<h2>Tipos de Notificación de correos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

@(Html.Kendo().Grid<mksolucion.Models._ntf02_tiponotificacioncorreo>()
      .Name("grid")
      .Columns(columns =>
      {

          columns.Template(c =>
                Html.ActionLink("Editar", "Edit", new { Id = c.ntf02_id })).ClientTemplate(Html.ActionLink(" ", "Edit", new { Id = "ntf02_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_edit.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("ntf02_id", "#=ntf02_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Eliminar", "Delete", new { Id = c.ntf02_id })).ClientTemplate(Html.ActionLink(" ", "Delete", new { Id = "ntf02_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_delete.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("ntf02_id", "#=ntf02_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Detalle", "Details", new { Id = c.ntf02_id })).ClientTemplate(Html.ActionLink(" ", "Details", new { Id = "ntf02_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_detail.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("ntf02_id", "#=ntf02_id#")).Width(24);


          
        columns.Bound(c => c.ntf02_nombre);
        columns.Bound(c => c.ntf02_descripcion);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("ntf02_tiponotificacioncorreo_Read", "TipoNotificacionCorreo"))
      )
)
