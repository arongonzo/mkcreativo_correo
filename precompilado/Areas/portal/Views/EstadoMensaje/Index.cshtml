@{
    ViewBag.Title = "Estados de Mensajes";
    Layout = Session["layout"].ToString();
}

<h2>Estados de Mensaje</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

@(Html.Kendo().Grid<mksolucion.Models._con05_EstadoMensaje>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Template(c =>
                Html.ActionLink("Editar", "Edit", new { Id = c.con05_id })).ClientTemplate(Html.ActionLink(" ", "Edit", new { Id = "con05_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_edit.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("con05_id", "#=con05_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Eliminar", "Delete", new { Id = c.con05_id })).ClientTemplate(Html.ActionLink(" ", "Delete", new { Id = "con05_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_delete.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("con05_id", "#=con05_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Detalle", "Details", new { Id = c.con05_id })).ClientTemplate(Html.ActionLink(" ", "Details", new { Id = "con05_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_detail.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("con05_id", "#=con05_id#")).Width(24);
          
        columns.Bound(c => c.con05_nombre);
          
        columns.Bound(c => c.con05_descripcion);
          
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("con05_EstadoMensaje_Read", "EstadoMensaje"))
      )
)
