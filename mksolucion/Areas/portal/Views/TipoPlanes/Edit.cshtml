@model mksolucion.Models.pln02_tipoplan

@{
    ViewBag.Title = "Editar Tipos de Planes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Editar Tipos de Planes</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
