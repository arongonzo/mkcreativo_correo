@{
    ViewBag.Title = "Mensajes Predefinidos";
    Layout = Session["layout"].ToString();
}

<h2>Mensajes Predefinidos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>


@(Html.Kendo().Grid<mksolucion.Models._con04_mensajepredef>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Template(c =>
                Html.ActionLink("Editar", "Edit", new { Id = c.con04_id })).ClientTemplate(Html.ActionLink(" ", "Edit", new { Id = "con04_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_edit.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("con04_id", "#=con04_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Eliminar", "Delete", new { Id = c.con04_id })).ClientTemplate(Html.ActionLink(" ", "Delete", new { Id = "con04_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_delete.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("con04_id", "#=con04_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Detalle", "Details", new { Id = c.con04_id })).ClientTemplate(Html.ActionLink(" ", "Details", new { Id = "con04_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_detail.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("con04_id", "#=con04_id#")).Width(24);

        columns.Bound(c => c.con04_accesoRapido);
        columns.Bound(c => c.con04_descripcion);
        columns.Bound(c => c.con04_Asunto);

      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("con04_mensajepredef_Read", "MensajesPredefinidos"))
      )
)
