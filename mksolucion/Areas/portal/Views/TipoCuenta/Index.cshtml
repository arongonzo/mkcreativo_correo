@{
    ViewBag.Title = "Tipos de Cuenta Cliente";
    Layout = Session["layout"].ToString();
}

<h2>Tipos de Cuenta Cliente</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

@(Html.Kendo().Grid<mksolucion.Models._cnt02_tipocuenta>()
      .Name("grid")
      .Columns(columns =>
      {

          columns.Template(c =>
                Html.ActionLink("Editar", "Edit", new { Id = c.cnt02_id })).ClientTemplate(Html.ActionLink(" ", "Edit", new { Id = "cnt02_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_edit.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("cnt02_id", "#=cnt02_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Eliminar", "Delete", new { Id = c.cnt02_id })).ClientTemplate(Html.ActionLink(" ", "Delete", new { Id = "cnt02_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_delete.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("cnt02_id", "#=cnt02_id#")).Width(24);
          columns.Template(c =>
                Html.ActionLink("Detalle", "Details", new { Id = c.cnt02_id })).ClientTemplate(Html.ActionLink(" ", "Details", new { Id = "cnt02_id" }, new { @style = "background:url('../../Content/assets/Images/btn/btn_detail.png') no-repeat center right; display:inline-block; height: 24px; width: 24px" }).ToHtmlString().Replace("cnt02_id", "#=cnt02_id#")).Width(24);

          
        columns.Bound(c => c.cnt02_nombre);
        columns.Bound(c => c.cnt02_descripcion);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("cnt02_tipocuenta_Read", "TipoCuenta"))
      )
)
