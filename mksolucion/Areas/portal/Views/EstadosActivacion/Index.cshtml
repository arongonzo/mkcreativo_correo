<h2>Estados de Activación</h2>

@(Html.Kendo().Grid<mksolucion.Models._gen01_estados>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(c => c.gen01_nombre);
        columns.Bound(c => c.gen01_descripcion);
      })
      .ToolBar(toolbar => {
            toolbar.Excel();
            toolbar.Pdf();
      })
      .ColumnMenu()
      .Pageable()
      .Navigatable()
      .Sortable(sortable => {
          sortable.SortMode(GridSortMode.MultipleColumn);
      })
      .Filterable()
      .Scrollable(scrollable => scrollable.Enabled(false))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("gen01_estados_Read", "EstadosActivacion"))
      )
)
