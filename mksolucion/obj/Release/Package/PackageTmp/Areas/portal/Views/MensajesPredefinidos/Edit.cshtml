@model mksolucion.Models.con04_mensajepredef

@{
    ViewBag.Title = "Editar Mensajes Predefinidos de Contacto";
    Layout = Session["layout"].ToString();
}

<h2>Editar Mensajes Predefinidos de Contacto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Complete la informacion solicitada</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.con04_id)
        @Html.HiddenFor(model => model.con04_estado)
        <div class="form-group">
            @Html.LabelFor(model => model.con04_accesoRapido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.con04_accesoRapido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.con04_accesoRapido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.con04_descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.con04_descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.con04_descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.con04_Asunto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.con04_Asunto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.con04_Asunto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.con04_mensajetxt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.con04_mensajetxt, new { placeholder = "MENSAJE", rows = "3", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.con04_mensajetxt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.con04_mensajehtml, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @(Html.Kendo().EditorFor(model => model.con04_mensajehtml)
                    .Name("con04_mensajehtml")
                    .HtmlAttributes(new { style = "height:300px", aria_label = "editor", @class = "col-md-8" })
                      .Tools(tools => tools
                          .Clear()
                          .Bold().Italic().Underline().Strikethrough()
                          .JustifyLeft().JustifyCenter().JustifyRight().JustifyFull()
                          .InsertUnorderedList().InsertOrderedList()
                          .Outdent().Indent()
                          .CreateLink().Unlink()
                          .InsertImage()
                          .InsertFile()
                          .SubScript()
                          .SuperScript()
                          .TableEditing()
                          .ViewHtml()
                          .Formatting()
                          .CleanFormatting()
                          .FontName()
                          .FontSize()
                          .FontColor().BackColor()
                          .Print()
                  )
                    .Resizable(resizable => resizable.Content(true).Toolbar(true))
                    .ImageBrowser(imageBrowser => imageBrowser
                      .Image("~/Content/UserFiles/Images/{0}")
                      .Read("Read", "ImageBrowser")
                      .Create("Create", "ImageBrowser")
                      .Destroy("Destroy", "ImageBrowser")
                      .Upload("Upload", "ImageBrowser")
                      .Thumbnail("Thumbnail", "ImageBrowser")
                  )


     .Value(System.Net.WebUtility.HtmlDecode(Model.con04_mensajehtml))
            )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver al Listado", "Index")
</div>
